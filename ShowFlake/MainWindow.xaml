<Window x:Class="ShowFlake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShowFlake"
        mc:Ignorable="d"

        Title="MainWindow" Height="113" Width="150">
    <Grid>
        <Button Content="Show snowflake" Click="Button_Click" Margin="20,20,20,20" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="1.161"/>
                    <RotateTransform/>
                    <TranslateTransform Y="1.308"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
